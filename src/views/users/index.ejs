<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <h1>User List</h1>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <a href="/articles/userlist/find/<%= user._id %>"><%= user.name %></a>
                <form action="/articles/userdelete/delete/<%= user._id %>" method="POST">
                  <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/articles/usercreate/createform">Create New Article</a>
</body>
</html>
