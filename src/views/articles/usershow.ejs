<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <title>Article Detail</title>
  <style>
    .slideshow-container {
      position: relative;
      height: 300px;
      /* Thay đổi chiều cao theo ý muốn */
      overflow: hidden;
    }

    .slide {
      display: none;
    }

    .slide img {
      width: 100%;
      height: 100%;
    }

    .active {
      display: block;
    }
  </style>
</head>

<body style="height: 100vh; ">
  <div
    style="display: flex;justify-content: center; height: 50px; background-color: #185c98; position: sticky; top:0;left: 0;">
    <div style="width: 80%;height: 100%; display: flex; justify-content: center;align-items: center;">
      <div style="display: flex; flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-start;width: 100%;cursor: pointer;">
        <i class="fa fa-home"></i>
        <!-- <p style="color: white; padding-left: 15px;padding-right: 15px;"><b>Chính trị</b></p>
          <p style="color: white; padding-left: 15px;padding-right: 15px;"><b>Xã hội</b></p>
          <p style="color: white; padding-left: 15px;padding-right: 15px;"><b>Nhân văn</b></p>
        -->
        <p style="color: white; padding-left: 15px; padding-right: 15px;"><b>CHỦ ĐỀ</b></p>
        <% categories.forEach((category) => { %>
          <div style="color: white; padding: 10px; cursor: pointer;"
               onclick="onCategoryChange('<%= category._id %>')">
            <%= category.name %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
 

  <div style="display: flex; justify-content: center">

    <div style="height: auto; width: 80%; display: flex">
      <div style="width: 700px">
        <h1>
          <%= article.title %>
        </h1>
        <p>Author: <%= article.author %>
        </p>
        <p><b> Description: <%= article.description %></b></p>
        <img src="<%= article.imageUrl %>" alt="Article Image" style="width: 100%" />

        <p>
          <%= article.content %>
        </p>

        <p>Category: <%= article.category.name %>
        </p>
        <!-- Added this line -->

        <!-- Added this line -->

        <p>Created At: <%= article.createdAt.toDateString() %>
        </p>
        <a href="/articles/user">Back to Article List</a>
      </div>
      <div style="width: 300px; margin-left: 40px">
        <div style="margin-top: 50px;">
          <img
            src="https://static.criteo.net/design/dt/100887/221123/f276927e4a634e7f8176f88ce12a687a_image_ad_300x600.jpeg"
            alt="">
          <img
            src="https://tpc.googlesyndication.com/simgad/9404959985424765689?sqp=4sqPyQQrQikqJwhfEAEdAAC0QiABKAEwCTgDQPCTCUgAUAFYAWBfcAJ4AcUBLbKdPg&rs=AOga4qnMzQu_nHeIHWYwzlnrecV6sj3m2Q"
            alt="">
        </div>
      </div>
    </div>
  </div>
  </div>
  <script>
     function onCategoryChange(categoryId) {
    window.location.href = `/articles/user/category/${categoryId}`;
  }
  </script>
</body>

</html>